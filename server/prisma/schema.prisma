enum EmployeeType {
  FULL_TIME
  PART_TIME
  CONTRACT
  INTERN
  TEMPORARY
  REMOTE
}

enum Shift {
  GENERAL
  OVERTIME
  NIGHT
}

enum Status {
  ACTIVE
  INACTIVE
}

enum LeaveStatus {
  PENDING
  APPROVED
  REJECTED
}

enum UserRole {
  ADMIN
  EMPLOYEE
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

enum MaritalStatus {
  SINGLE
  MARRIED
  DIVORCED
  WIDOWED
}

enum AttendanceType {
  DAILY
  WEEKLY
  MONTHLY
}

enum PaymentStatus {
  PENDING
  PAID
  REJECTED
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  TODO
}

enum PriorityStatus {
  HIGH
  MEDIUM
  LOW
}
