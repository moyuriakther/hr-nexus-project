model CandidateList {
  id          String  @id @default(uuid())
  name        String?
  candidateId String? @unique
  photograph  String?
  email       String?
  ssn         String?
  phone       String?
  isDeleted   Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  shortList ShortList[]

  @@map("candidate_lists")
}

model ShortList {
  id            String    @id @default(uuid())
  // name          String?
  candidateId   String
  // jobPosition   String?
  shortlistDate DateTime?
  interviewDate DateTime?

  candidate          CandidateList        @relation(fields: [candidateId], references: [id])
  isDeleted          Boolean              @default(false)
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
  candidateSelection CandidateSelection[]

  @@map("short_lists")
}

model CandidateSelection {
  id             String  @id @default(uuid())
  // name           String?
  // employeeId     String
  position       String?
  selectionTerms String?

  shortListedCandidateId String
  candidateShortListed   ShortList @relation(fields: [shortListedCandidateId], references: [id])
  isDeleted              Boolean   @default(false)
  createdAt              DateTime  @default(now())
  updatedAt              DateTime  @updatedAt
  // CandidateList        CandidateList? @relation(fields: [candidateListId], references: [id])
  candidateListId        String?

  @@map("candidate_selections")
}

model NoticeData {
  id          String    @id @default(uuid())
  noticeType  String?
  description String?
  noticeDate  DateTime?
  noticeBy    String?
  isDeleted   Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("notice_boards")
}

model Recruitment {
  id               String  @id @default(uuid())
  firstName        String
  lastName         String?
  email            String  @unique
  phone            String
  alternativePhone String?
  ssn              String?
  presentAddress   String?
  permanentAddress String?
  country          String?
  city             String?
  zipCode          String?
  picture          String?

  // Educational Info
  obtainedDegree String?
  university     String?
  cgpa           String?
  comments       String?

  // past companies 
  companyName   String?
  workingPeriod String?
  duties        String?
  supervisor    String?
  interviews    Interview[]

  isDeleted Boolean     @default(false)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  shortList ShortList[]

  @@map("recruitment")
}

model Interview {
  id            String      @id @default(uuid())
  candidateName String
  interviewer   String
  jobPosition   String
  interviewDate String
  vivaMarks     String
  writtenMarks  String
  mcqTotalMarks String
  totalMarks    String
  selection     String
  candidateId   String
  candidate     Recruitment @relation(fields: [candidateId], references: [id])

  isDeleted Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("interview")
}

model ShortList {
  id String @id @default(uuid())

  name          String
  jobPosition   String
  interviewDate String
  candidateId   String
  candidate     Recruitment @relation(fields: [candidateId], references: [id])

  isDeleted Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("shortlist")
}

